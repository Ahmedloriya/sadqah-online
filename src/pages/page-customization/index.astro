---
import MainLayout from "../../layouts/MainLayout.astro";
import Breadcrumb from "../../components/Breadcrumb.astro";
import Header from "../../components/Header.astro";
import Test from "../../components/Test.astro";
---

<MainLayout>
  <Breadcrumb title="Customization" />
  <div class="flex justify-center items-center max-w-7xl mx-auto px-4">
    <div class="w-full">
      <!-- Tabs -->
      <div class="flex flex-wrap bg-white p-2 rounded-t-lg shadow border">
        <button
          onclick="changeTab(1)"
          class="tab-button px-4 py-2 text-gray-600 border-b-2 border-transparent hover:border-green-500 mb-2 sm:mb-0"
        >
          Design
        </button>
        <button
          onclick="changeTab(2)"
          class="tab-button px-4 py-2 text-gray-600 border-b-2 border-transparent hover:border-green-500 mb-2 sm:mb-0"
        >
          Tailwind
        </button>
        <button
          onclick="changeTab(3)"
          class="tab-button px-4 py-2 text-gray-600 border-b-2 border-transparent hover:border-green-500 mb-2 sm:mb-0"
        >
          Bootstrap
        </button>
        <button
          onclick="changeTab(4)"
          class="tab-button px-4 py-2 text-gray-600 border-b-2 border-transparent hover:border-green-500"
        >
          Core
        </button>
      </div>

      <!-- Panels -->
      <div class="w-full bg-white rounded-b-lg shadow-lg">
        <!-- Design Tab Content -->
        <div id="tabContent1" class="tab-content">
          <div class="p-4 bg-gray-100 rounded-lg  h-80 overflow-y-auto">
            <Header />
          </div>
        </div>

        <!-- Tailwind Tab Content -->
        <div id="tabContent2" class="tab-content hidden">
            <div class="flex justify-end p-4">
                <div x-data="{ copyNotification: false }" class="relative">
                    <button onclick="copyCode()" class="flex items-center px-4 py-2 text-white bg-blue-500 rounded hover:bg-blue-600 focus:outline-none">
                        <span>Copy Code</span>
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5.5-6.5h.02"></path>
                        </svg>
                    </button>
                    <div x-show="copyNotification" class="absolute right-0 px-2 py-1 mt-2 text-white bg-green-500 rounded shadow-lg" x-transition>
                        Copied!
                    </div>
                </div>
            </div>
            
          <div class="p-4 bg-gray-100 rounded-lg h-80 overflow-y-auto">
            
            <Test
              code={`<div class="flex flex-col space-y-4">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between">
          <h1 class="text-xl md:text-2xl font-bold">{}</h1>
          <div class="flex flex-wrap space-y-2 md:space-y-0 md:space-x-3 mt-4 md:mt-0">
            <div class="flex items-center border-2 border-gray-400 bg-white pr-1 rounded-xl w-full md:w-auto">
              <span class="p-2">
                <img src="/assets/svg/search.svg" alt="" class="w-8 p-1" />
              </span>
              <input
                type="text"
                placeholder="Search..."
                class="w-full p-3 rounded-r border-0 focus:outline-none bg-inherit"
              />
            </div>
            <div class="relative inline-block text-left">
              <button
                onclick="toggleDropdown()"
                class="p-2 bg-white rounded-full shadow-md hover:bg-indigo-50 focus:outline-none"
              >
                <img src="/assets/svg/setting.svg" alt="" class="w-8 p-1" />
              </button>
              <div
                id="dropdown"
                class="hidden absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none"
              >
                <div class="py-1">
                  <div class="px-4 py-2 text-sm text-gray-900">
                    <p class="font-bold">Moin Khan</p>
                    <p class="text-gray-500">Administrator</p>
                  </div>
                  <a
                    href="#"
                    class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                  >
                    <img
                      src="/assets/svg/profile.svg"
                      alt="Profile Icon"
                      class="w-4 h-4 mr-2"
                    /> Profile
                  </a>
                  <a
                    href="#"
                    class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                  >
                    <img
                      src="/assets/svg/setting.svg"
                      alt="Setting Icon"
                      class="w-4 h-4 mr-2"
                    /> Setting
                  </a>
                </div>
              </div>
            </div>
            <button class="p-2 bg-white rounded-full shadow-md hover:bg-indigo-50 focus:outline-none">
              <img src="/assets/svg/notification.svg" alt="" class="w-8 p-1" />
            </button>
          </div>
        </div>
      </div>
      <script is:inline>
        function toggleDropdown() {
          const dropdown = document.getElementById("dropdown");
          dropdown.classList.toggle("hidden");
        }
      </script>`}
              language="javascript"
            />
          </div>
        </div>

        <!-- Bootstrap Tab Content -->
        <div id="tabContent3" class="tab-content hidden">
          <div class="p-6 bg-gray-200">
            <h2 class="text-xl font-bold">Bootstrap Content</h2>
            <p class="mt-4 text-gray-600">
              This is content for the Bootstrap tab.
            </p>
          </div>
        </div>

        <!-- Core Tab Content -->
        <div id="tabContent4" class="tab-content hidden">
          <div class="p-6 bg-gray-200">
            <h2 class="text-xl font-bold">Core Content</h2>
            <p class="mt-4 text-gray-600">
              This is content for the Core tab.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script is:inline>
    function changeTab(tabNumber) {
      const tabs = document.querySelectorAll(".tab-content");
      tabs.forEach((tab) => tab.classList.add("hidden"));

      const buttons = document.querySelectorAll(".tab-button");
      buttons.forEach((button) => {
        button.classList.remove("active", "bg-green-500", "text-white", "rounded-xl");
      });

      document.getElementById(`tabContent${tabNumber}`).classList.remove("hidden");
      buttons[tabNumber - 1].classList.add("active", "bg-green-500", "text-white", "rounded-xl");
    }
    
    window.onload = () => changeTab(1);
  </script>
</MainLayout>